using static System.Console; // Не хочу писать много раз console, знаю что плоховато так сокращать,
                             // но не могу запомнить почему и пока с проблемами не встречался.
                             // Ну так прикол, на мою привычку и прочее не влияет.


class Program
{
    static void Main(string[] args)
    {
        // Вводим первое число
        Write("Input first number: ");
        if (!Int32.TryParse(ReadLine(), out var firstNumber))            
        {
            WriteLine("Not a number");
            return;
        }

        // Вводим второе число
        Write("Input second number: ");
        if (!Int32.TryParse(ReadLine(), out var secondNumber))
        {
            WriteLine("Not b number");
            return;
        }

        // Вводим знак
        Write("Input sign: ");
        var oper = ReadLine();
        if (string.IsNullOrEmpty(oper) || oper.Length != 1)

            {
                WriteLine("Wrong sign");
            return;
        }

        int result = 0; // Добавляем некий счётчик


        switch (oper[0]) // Выбор знака
        {
            /*case '+':
                WriteLine("Result of {0} + {1} = {2}", a, b, a + b);
                break;
            */
            
            // Меняю код с урока на другой, что б вычислять 2-ичные и 16-ричные числа, как понял из задания.
            
            case '+':
                WriteLine(); // Что бы просто немного разделить вводимое с выводимым...
                result = firstNumber + secondNumber;
                break;
            case '-':
                WriteLine();
                result = firstNumber - secondNumber;
                break;
            case '*':
                WriteLine();
                result = firstNumber * secondNumber;
                break;
            case '/':
                WriteLine();
                result = firstNumber / secondNumber;
                break;
            case '%':
                WriteLine();
                result = firstNumber % secondNumber;
                break;

            // Добавляем побитовые операторы
            case '&':
                result = firstNumber & secondNumber;
                break;
            case '|':
                result = firstNumber | secondNumber;
                break;
            case '^':
                result = firstNumber ^ secondNumber;
                break;


            default:
                WriteLine("Wrong sign");
                return;            
        }
                
        WriteLine("\nResult of {0} {1} {2} = {3}", firstNumber, oper[0], secondNumber, result);
        
        // Вывод в двоичную и шестнадцатеричную систему. Первый вывод отделяем от общего результата
        WriteLine("\nBinary representation: " + Convert.ToString(result, 2));
        WriteLine("Hexadecimal representation: " + Convert.ToString(result, 16));

    }
}
